    <title>Login</title>
    
    <!-- folha de estilos -->
    <style>
        body {
            /* background: linear-gradient(-90deg, blue, red, purple); */
            background: linear-gradient(-90deg, white, gray, lightblue);
        }

        .login {
            padding: 15px;
            height: 70vh;
            background: transparent;
            display: flex;
            justify-content: center;
            align-items: center;
        }

        .login-container {
            max-height: 510px;
            width: 300px;
            background-color: rgb(206, 210, 220);
            box-sizing: border-box;
            padding: 32px;
            border-radius: 8px;
            display: flex;
            flex-direction: column;
            align-items: center;
        }

        .login-form {
            width: 100%;
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
        }

        .login-input {
            height: 40px;
            width: 100%;
            box-sizing: border-box;
            padding-left: 8px;
            border: unset;
            outline: none;
        }

        .login-input-border {
            height: 1px;
            width: 100%;
            margin-bottom: 16px;
            background-color: #cfcfcf;
            transition: 0.3s, ease-in-out;
        }

        .login-input-border::after {
            content: "";
            display: block;
            height: 1px;
            width: 0;
            margin-bottom: 16px;
            background: linear-gradient(120deg, #0e0e0e, #ff1010);
            transition: 0.3s, ease-in-out;
        }

        .login-input:focus+.login-input-border::after {
            width: 100%;
        }

        .login-submit {
            height: 48px;
            width: 100%;
            padding-left: 8px;
            outline: none;
            position: relative;
            background: linear-gradient(120deg, #0c1dd5, #090909, #0c1dd5);
            background-size: 200%;
            margin-bottom: 32px;
            color: #fff;
            font-size: 16px;
            font-weight: bold;
            border: unset;
            border-radius: 4px;
            cursor: pointer;
            transition: 0.5s, ease;
        }

        .login-submit:hover {
            background-position: right;
        }

        .login-reset {
            font-size: 13px;
            color: #929292;
            text-decoration: none;
        }

        .bt-cancelar {
            font-family: sans-serif;
            font-size: 10pt;
            color: #929292;
            padding: 5px;
            text-decoration: none;
            margin-top: 10%;
            -webkit-transition: box-shadow 300ms ease-in-out,
                color 300ms ease-in-out;
            transition: box-shadow 300ms ease-in-out, color 300ms ease-in-out;
        }

        .bt-cadastro {
